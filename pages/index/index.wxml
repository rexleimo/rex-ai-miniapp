<!--index.wxml-->
<view class="page">
  <scroll-view type="list" style="height:86vh;" scroll-y="{{true}}">
    <view class="container">
      <view class="h1">
        描述词
      </view>
      <l-textarea maxlength="-1" indicator="{{false}}" auto-height="{{true}}" placeholder="描述你想画什么,包括画面里面都有什么内容。" model:value="{{prompt}}">
      </l-textarea>
      <view class="h1">
        不出现的内容
      </view>
      <l-textarea maxlength="-1" indicator="{{false}}" auto-height="{{true}}" placeholder="描述你想什么内容不出现画面里面。" model:value="{{negative_prompt}}"></l-textarea>
      <view class="h1">
        设计行业：
      </view>
      <view>
        <wux-button wx:for="{{types}}" wx:key="index" type="positive" size="small" outline="{{index === typeIdx ? false: true}}" data-cloumname="typeIdx" data-idx="{{index}}" bind:tap="handleChangeTap">
          {{item.name}}
        </wux-button>
      </view>
      <view class="h1">
        目标：
      </view>
      <view>
        <wux-button wx:for="{{styles}}" wx:key="index" size="small" type="positive" outline="{{index === styleIdx ? false: true}}" data-idx="{{index}}" data-cloumname="styleIdx" bind:tap="handleChangeTap">
          {{item.name}}
        </wux-button>
      </view>
      <view wx:for="{{attrs}}" wx:key="index">
        <view class="h1">
          {{item.name}}:
        </view>
        <view style="display: flex;">
          <wux-button size="small" wx:for="{{item.values}}" wx:key="index" wx:for-item="vitem" type="positive" outline="{{index === attrIdx[item.name] ? false: true}}" data-idx="{{index}}" data-cloumname="{{item.name}}" bind:tap="handleChangeAttrTap">{{vitem.name}}
          </wux-button>
        </view>
      </view>

      <view wx:if="{{styles[styleIdx].is_size == false}}">
        <view class="h1">
          画面比例：
        </view>
        <l-grid l-class="grid gridhover" row-num="3" show-col-border="{{flase}}">
          <l-grid-item l-grid-item="grid-item item item-huahu {{huamianIdx === index ? 'select' :''}}" wx:for="{{huamian}}" wx:key="index" data-cloumname="huamianIdx" key="{{index}}" slot="{{index}}" data-idx="{{index}}" bind:tap="handleChangeTap">
            <view class="container-huahu">
              <view class="text">{{item.name}}</view>
            </view>
          </l-grid-item>
        </l-grid>
      </view>

      <wux-button block type="positive" loading="{{isRendererMode}}" bind:tap="handleRenderImage">
        立即渲染
      </wux-button>

    </view>
  </scroll-view>
</view>